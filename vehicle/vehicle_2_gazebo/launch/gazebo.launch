<?xml version="1.0" encoding="UTF-8"?>
<launch>

<!-- inicia gazebo con el default world -->
<include file="$(find gazebo_ros)/launch/empty_world.launch">
  <arg name="world_name" value="$(find vehicle_2_gazebo)/worlds/default.world"/>
  <arg name="debug" value="false" />
  <arg name="gui" value="true" />
  <arg name="paused" value="true"/>
  <arg name="use_sim_time" value="true"/>
  <arg name="headless" value="false"/>
</include>

<!-- agrega el robot -->
<include file="$(find vehicle_2_gazebo)/launch/spawner.launch">
    <arg name="urdf_robot_file" value="$(find vehicle_2_description)/urdf/robot.xacro"/>
</include>

</launch>